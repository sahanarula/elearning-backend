<div class="row">
  <form class="col s12" method="post" action="/teacher/doSignup">
    <div class="row">
      <div class="input-field col s12 m6">
        <input id="name" type="text" class="validate" name="name">
        <label for="name">Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
        <input id="password" type="password" class="validate" name="password">
        <label for="password">Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
        <input id="confirm-password" type="password" class="validate" name="repassword">
        <label for="confirm-password">Confirm Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
        <input id="submit" value="Signup" type="submit" class="validate waves-effect waves-light btn red">
      </div>
    </div>
  </form>
</div>
